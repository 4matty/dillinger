<ul class="dropdown dropdown-menu" role="menu">

  <% if (isDropboxConfigured) { %>
  <li ng-controller="Dropbox as dropbox">
    <% if (isDropboxAuth) { %>
      <a href="#" class="save-to-dropbox linked" ng-click="dropbox.saveTo()">
    <% } else { %>
      <a href="/redirect/dropbox"  class="import-dropbox unlinked">
    <% } %>
      <span>Dropbox</span>
      <span class="icon icon-link"><%- include ../icons/linked %></span>
    </a>
  </li>
  <% } %>

  <% if (isGithubConfigured) { %>
  <li ng-controller="Github as github">
    <% if (isGithubAuth) { %>
      <a href="#" class="save-to-github linked" ng-click="github.saveTo('<%= github_username %>')">
    <% } else { %>
      <a href="/redirect/github"  class="import-github unlinked">
    <% } %>
      <span>Github</span>
      <span class="icon icon-link"><%- include ../icons/linked %></span>
    </a>
  </li>
  <% } %>

  <li>
    <a href="#" class="google-drive save-to-google-drive unlinked">
      <span>Google Drive</span>
      <span class="icon icon-link"><%- include ../icons/linked %></span>
    </a>
  </li>
  <li>
    <a href="#" class="one-drive save-to-one-drive unlinked">
      <span>One Drive</span>
      <span class="icon icon-link"><%- include ../icons/linked %></span>
    </a>
  </li>
</ul>
